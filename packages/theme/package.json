{
  "name": "@fedorovskyi/theme",
  "version": "1.0.4",
  "description": "theme",
  "main": "./dist/tokens.js",
  "module": "./dist/tokens.js",
  "types": "./dist/tokens.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/tokens.d.ts",
      "import": "./dist/tokens.js",
      "require": "./dist/tokens.cjs.js"
    },
    "./theme.css": "./dist/theme.css"
  },
  "tsup": {
    "entry": [
      "out/tokens.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "sourcemap": false,
    "splitting": false,
    "target": "es2019",
    "platform": "node"
  },
  "scripts": {
    "build": "npm run generate:out && npm run build:css && npm run build:js",
    "generate:css": "node generate-css.js",
    "generate:tokens": "node generate-tokens.js",
    "generate:out": "npm run generate:tokens && npm run generate:css",
    "build:css": "postcss out/theme.css -o dist/theme.css",
    "build:js": "tsup",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cssnano": "^7.0.7",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/"
  ]
}
